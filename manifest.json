{
  "name": "테스트 시나리오 도구",
  "description": "테스트 시나리오 생성 및 실행, 요소 값 할당 기능을 제공하는 통합 도구입니다.",
  "version": "2.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "main.html"
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "64": "img/icon64.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/act_scenario_content.js"],
      "run_at": "document_idle"
    }
  ]
}